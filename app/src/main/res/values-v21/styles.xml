<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.NoActionBar.Fullscreen">
        <item name="android:navigationBarColor">#3F51B5</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    <style name="DialogTheme" parent="android:Theme.Material.Dialog">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:background">#3F51B5</item>
        <item name="android:keyTextColor">#FFFFFFFF</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
        <item name="android:animationDuration">@android:integer/config_shortAnimTime</item>
    </style>
</resources>